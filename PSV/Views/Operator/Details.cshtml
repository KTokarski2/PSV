@model PSV.Models.DTOs.OperatorDetails

<main>
    <div class="details-container">
        <form class="order-details">
            <div class="input-group">
                <label for="firstName">Imię: <span class="symbol-required">*</span></label>
                <input type="text" name="firstName" id="firstName" value="@Model.FristName" disabled>
                <span id="errorFirstName" class="errors-text"></span>
            </div>
            <div class="input-group">
                <label for="lastName">Nazwisko: <span class="symbol-required">*</span></label>
                <input type="text" name="lastName" id="lastName" value="@Model.LastName" disabled>
                <span id="lastName" class="errors-text"></span>
            </div>
            <div class="input-group">
                <label for="phoneNumber">Numer telefonu: <span class="symbol-required">*</span></label>
                <input type="text" name="phoneNumber" id="phoneNumber" value="@Model.PhoneNumber" disabled>
                <span id="errorPhoneNumber" class="errors-text"></span>
            </div>
            <div class="input-group">
                <label for="location">Lokalizacja: <span class="symbol-required">*</span></label>
                <input type="text" name="location" id="client" value="@Model.Location" disabled>
                <span id="errorLocation" class="errors-text"></span>
            </div>
        </form>
        <div class="actions-container">
            <a href="@Url.Action("EditForm", "Operator", new {Model.Id})" class="details-action">Edytuj</a>
            <a href="@Url.Action("Delete", "Operator", new {Model.Id})" class="details-action">Usuń</a>
        </div>
    </div>
</main>