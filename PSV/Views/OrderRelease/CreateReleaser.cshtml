@model PSV.Models.DTOs.ReleaserPost;

<main>
    <div class="back-buttons-div">
        <a class="back-button" href="@Url.Action("Index", "Home")">
                <span class="material-symbols-outlined">
                    home
                </span>
            Strona główna
        </a>
    </div>
    <h2 class="page-title">Nowy wydawca</h2>
    <form class="create-form" asp-action="CreateReleaser" asp-controller="OrderRelease" method="post">
        <div class="input-group">
            <label asp-for="FirstName">Imię: <span class="symbol-required">*</span></label>
            <input type="text" asp-for="FirstName" placeholder="">
            <span asp-validation-for="FirstName" class="errors-text"></span>
        </div>
        <div class="input-group">
            <label asp-for="LastName">Nazwisko: <span class="symbol-required">*</span></label>
            <input type="text" asp-for="LastName" placeholder="">
            <span asp-validation-for="LastName" class="errors-text"></span>
        </div>
        <div class="input-group">
            <label asp-for="Location">Lokalizacja: <span class="symbol-required">*</span></label>
            <select asp-for="Location">
                @{
                    foreach (var location in Model.AllLocations)
                    {
                        <option value="@location.Id">@location.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="Location" class="errors-text"></span>
        </div>
        <input class="form-submit" type="submit" value="Dodaj wydawcę">
    </form>
</main>