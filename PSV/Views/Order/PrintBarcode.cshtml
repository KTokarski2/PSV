@{
Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Print Barcode</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
        }
        img {
            display: block;
            margin: 0 auto;
        }
    </style>
</head>
<body onload="window.print();">
<img src="@Model.ImageSrc" alt="Barcode">
</body>
</html>