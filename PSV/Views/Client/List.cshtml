@model List<PSV.Models.DTOs.ClientDetails>

<main>
    <a class="action-button" href="@Url.Action("Index", "Home")">
        <span class="material-symbols-outlined">
            arrow_back
        </span>
    </a>
    @{
        if (Model.Count == 0)
        {
            <h1>Brak klient√≥w w bazie danych</h1>
        }
        else
        {
            <table class="orders-list">
        <thead>
        <tr>
            <th>Nazwa klienta</th>
            <th>Adres klienta</th>
            <th>Numer telefonu</th>
        </tr>
        </thead>
        <tbody>
        @{
            foreach (var client in Model)
            {
                <tr class="orders-list-row">
                    <td><a href="@Url.Action("Details", "Client", new {client.Id})">@client.Name</a></td>
                    <td>@client.Address</td>
                    <td>@client.PhoneNumber</td>
                </tr>
            }
        }
        </tbody>
    </table>
        }
    }
</main>